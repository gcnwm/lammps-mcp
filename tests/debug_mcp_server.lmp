# Minimal debug script for mcp-server-lammps
# Purpose: fast smoke test for submit_script/read_log/read_output/restart tools

units           lj
atom_style      atomic
boundary        p p p

lattice         fcc 0.8442
region          box block 0 4 0 4 0 4
create_box      1 box
create_atoms    1 box
mass            1 1.0

pair_style      lj/cut 2.5
pair_coeff      1 1 1.0 1.0 2.5

neighbor        0.3 bin
neigh_modify    delay 0 every 1 check yes

velocity        all create 1.0 12345 mom yes rot yes dist gaussian
fix             1 all nve

timestep        0.005
thermo          20
thermo_style    custom step temp etotal press

# Output used by read_output tool
shell           mkdir debug_out
write_data      state.data

# Short run for quick debugging
run             100

# Restart file used by restart tool
write_restart   state.restart

unfix           1
